<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h2 class="text-center">Login</h2>
        </div>
        <div class="card-body">
          <%= form_with model: resource, as: resource_name, url: session_path(resource_name), data: { turbo: false } do |form| %>
            <div class="form-group mb-3">
              <%= form.label :email, class: "form-label" %>
              <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="form-group mb-3">
              <%= form.label :password, class: "form-label" %>
              <%= form.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-check mb-3">
                <%= form.check_box :remember_me, class: "form-check-input" %>
                <%= form.label :remember_me, class: "form-check-label" %>
              </div>
            <% end %>

            <div class="form-group mb-3">
              <%= form.submit "Login", class: "btn btn-primary w-100" %>
            </div>
          <% end %>

          <div class="text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>